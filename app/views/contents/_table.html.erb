<% table_helper.each do |x, y| %>
  <li><%= link_to "#{x} - #{y}", '#' %></li>
  <% end %>

   
    <% @contents.each do |content| %>
      
      <div class="panel panel-primary">
        <div class="panel-heading">
            <strong><%= content.code %> - <%= content.section %></strong>
        </div>
        <%= link_to content do%>
          <div class="panel body" id="content-panel"style= "margin-bottom:0; padding-left:5px;">
            <p><strong><%= simple_format content.cat %></strong></p>
            <%= simple_format content.desc %> 
          </div>
          <% if current_user.admin? %>
            <div class="panel-footer">  
              <%= link_to 'Edit', edit_content_path(content) %> |
              <%= link_to 'Delete', content, method: 
                          :delete, data: { confirm: 'Are you sure?' } %>   
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

    




